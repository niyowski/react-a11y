{
  "extends": ["plugin:@nx/react", "../../../.eslintrc.json"],
  "ignorePatterns": [
    "!**/*",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "cypress.config.ts"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": [
          "libs/demo/ui/tsconfig.*?.json",
          "libs/demo/ui/tsconfig.storybook.json"
        ]
      },
      "rules": {}
    },
    {
      "files": ["*.cy.{ts,js,tsx,jsx}", "cypress/**/*.{ts,js,tsx,jsx}"],
      "parserOptions": {
        "project": [
          "libs/demo/ui/tsconfig.*?.json",
          "libs/demo/ui/cypress/tsconfig.json"
        ]
      },
      "rules": {}
    }
  ]
}
