{
  "name": "react-a11y",
  "version": "0.1.0",
  "description": "Accessibility in React applications.",
  "keywords": [
    "react",
    "reactjs",
    "accessibility",
    "a11y"
  ],
  "homepage": "https://github.com/niyowski/react-a11y#readme",
  "bugs": "https://github.com/niyowski/react-a11y/issues",
  "license": "MIT",
  "author": "Mehmet Yarar <niyowski@gmail.com>",
  "repository": "github:niyowski/react-a11y",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "clean": "pnpm dlx rimraf --glob **/node_modules",
    "reset": "pnpm clean && pnpm install",
    "format": "prettier . --write --ignore-unknown",
    "lint": "nx run-many --target=lint --all --fix",
    "typecheck": "nx run-many --target=typecheck --all",
    "test": "nx run-many --target=test --all",
    "build": "nx run-many --target=build --all",
    "demo:start": "nx run demo:serve",
    "cm": "cz"
  },
  "dependencies": {
    "@swc/helpers": "~0.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.0.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/config-nx-scopes": "^18.4.3",
    "@nx/eslint": "17.1.3",
    "@nx/eslint-plugin": "17.1.3",
    "@nx/jest": "^17.1.3",
    "@nx/js": "17.1.3",
    "@nx/react": "^17.1.3",
    "@nx/vite": "17.1.3",
    "@nx/workspace": "17.1.3",
    "@swc-node/register": "~1.6.8",
    "@swc/cli": "~0.1.63",
    "@swc/core": "~1.3.100",
    "@swc/jest": "0.2.29",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "14.1.2",
    "@types/jest": "^29.5.10",
    "@types/node": "20.10.1",
    "@types/react": "18.2.39",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react-swc": "~3.5.0",
    "autoprefixer": "10.4.16",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "~23.0.1",
    "lint-staged": "^15.1.0",
    "nx": "17.1.3",
    "postcss": "8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "3.3.5",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "typescript": "~5.3.2",
    "vite": "~4.5.0",
    "vite-plugin-dts": "~3.6.4",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-nx-scopes"
    ]
  }
}
